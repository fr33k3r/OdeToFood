@model IEnumerable<OdeToFood.Models.RestaurantListViewModel>

@{
    ViewBag.Title = "Home Page";
}

<form class="form-group form-inline"  method="get">

    <input class="form-control" type="search" name="SearchTerm" />
    <input class="form-control" type="submit" value="Search By Name" />
</form>

@foreach (var item in Model)
{
    <div>
        <h4>@item.Name</h4>
        <div>
            @item.City, @item.Country
        </div>
        <div>
            Reviews: @item.CountOfReviews
        </div>
        <hr />
    </div>
}